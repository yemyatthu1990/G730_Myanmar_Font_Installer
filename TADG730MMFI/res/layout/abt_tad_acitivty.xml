<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_full"
    android:background="@color/text_white_color"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            

                <LinearLayout
                    android:id="@id/titlelayout"
                    android:layout_width="fill_parent"
                    android:layout_height="48.0dip"
                    android:background="@drawable/ic_app_titlebar"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16.0dip"
                        android:text="@string/abt_tad"
                        android:textColor="@color/license_agreement_title_font_color"
                        android:textSize="@dimen/license_agreement_title_font_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="40.0dip"
                        android:background="@drawable/tad_icon" />

                    <TextView
                        android:id="@id/tad_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="30.0dip"
                        android:text="@string/tad"
                        android:textColor="@color/title_color"
                        android:textSize="18.0dip" />

                    <TextView
                        android:id="@id/description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10.0dip"
                        android:text="@string/tad_team"
                        android:textColor="@color/title_color"
                        android:textSize="13.0dip" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="9.0dip"
                    android:layout_marginLeft="13.0dip"
                    android:layout_marginTop="30.0dip"
                    android:gravity="center_vertical"
                    android:text="@string/about_us_fllow_as_at"
                    android:textColor="@color/title_color"
                    android:textSize="13.0dip" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13.0dip"
                    android:layout_marginRight="13.0dip"
                    android:background="@drawable/lite_about_bg"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@id/facebook_tad"
                        android:layout_width="fill_parent"
                        android:layout_height="45.0dip"
                        android:orientation="horizontal"
                        android:clickable="true">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10.0dip"
                            android:layout_weight="0.1"
                            android:src="@drawable/lite_about_ic_facebbok" />

                        <TextView
                            android:id="@id/facebook_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="7.0dip"
                            android:layout_weight="2.0"
                            android:text="@string/about_us_facebook"
                            android:textColor="@color/title_color" />

                        <ImageView
                            android:id="@id/facebook_pulldown_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="11.0dip"
                            android:layout_weight="0.1"
                            android:src="@drawable/setting_location_choise" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:background="@color/divide_line" />

                    <LinearLayout
                        android:id="@id/twitter_tad"
                        android:layout_width="fill_parent"
                        android:layout_height="45.0dip"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:clickable="true" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10.0dip"
                            android:layout_weight="0.1"
                            android:src="@drawable/lite_about_ic_twitter" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="7.0dip"
                            android:layout_weight="2.0"
                            android:text="@string/about_us_twitter"
                            android:textColor="@color/title_color" />

                        <ImageView
                            android:id="@id/twitter_pulldown_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="11.0dip"
                            android:layout_weight="0.1"
                            android:src="@drawable/setting_location_choise" />
                    </LinearLayout>
                </LinearLayout>
                
               <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="9.0dip"
                    android:layout_marginLeft="13.0dip"
                    android:layout_marginTop="30.0dip"
                    android:gravity="center_vertical"
                    android:text="@string/get_soruce"
                    android:textColor="@color/title_color"
                    android:textSize="13.0dip" />
               
               <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13.0dip"
                    android:layout_marginRight="13.0dip"
                    android:background="@drawable/lite_about_bg"
                    android:orientation="vertical" >
					<LinearLayout
                        android:id="@id/github_tad"
                        android:layout_width="fill_parent"
                        android:layout_height="45.0dip"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:clickable="true" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10.0dip"
                            android:layout_weight="0.1"
                            android:src="@drawable/lite_about_ic_github" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="7.0dip"
                            android:layout_weight="2.0"
                            android:text="@string/lite_github_tad"
                            android:textColor="@color/title_color" />

                        <ImageView
                            android:id="@id/twitter_pulldown_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="11.0dip"
                            android:layout_weight="0.1"
                            android:src="@drawable/setting_location_choise" />
                    </LinearLayout>
                    
                </LinearLayout>
               
               
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>