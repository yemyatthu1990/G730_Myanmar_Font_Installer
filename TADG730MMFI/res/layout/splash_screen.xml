<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical" android:background="@drawable/pic_splash" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android" >
	<ImageView
	    android:id="@id/splash_icon"
	    android:layout_centerInParent="true" 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@drawable/splash_icon"/>
	<ImageView 
	    android:layout_centerHorizontal="true"
	    android:id="@id/splash_text"
	    android:layout_below="@id/splash_icon"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@drawable/splash_text"/>
</RelativeLayout>
